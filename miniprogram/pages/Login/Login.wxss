/**index.wxss**/
.userinfo{
  margin-top: 275rpx;
  width: 100%;
  background-color: transparent;
  border-style: none;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 300ms ease;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.userinfo-avatar[size] {
  width: 100rpx;
}

.userinfo-avatar:after {
  border: none;
}
